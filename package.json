{
	"private": true,
	"name": "challanger-bank",
	"scripts": {
		"build": "turbo run build",
		"start": "turbo run start --parallel --filter=@challanger-bank/server --filter=@challanger-bank/web",
		"start:production": "pm2 start ecosystem.config.js",
    "restart:production": "pm2 restart ecosystem.config.js",
    "config:local": "turbo run config:local",
		"dev": "turbo run dev",
    "test": "pnpm --filter @challanger-bank/server test && pnpm --filter @challanger-bank/web test",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"lint": "turbo run lint",
		"relay": "turbo run relay",
		"schema": "turbo run schema",
		"compose:up": "docker compose -f docker-compose.yml up -d",
		"compose:up:production": "docker compose -f docker-compose.prod.yml up -d",
		"compose:down": "docker compose -f docker-compose.yml down",
		"compose:down:production": "docker compose -f docker-compose.prod.yml down",
    "mongo:replica": "bash scripts/setup-mongodb-replica.sh",
		"k6:pix": "pnpm --filter @challanger-bank/server reset:pix && pnpm --filter @challanger-bank/server reset:ledger && pnpm --filter @challanger-bank/server reset:account && docker compose -f docker-compose.yml run --rm k6 run /scripts/pixTransaction-concurrency.js"
	},
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
	"devDependencies": {
		"@babel/preset-env": "^7.23.8",
		"@babel/preset-typescript": "^7.23.3",
		"@challanger-bank/eslint-config-custom": "*",
		"autoprefixer": "^10.4.16",
		"babel-plugin-transform-barrels": "^1.0.10",
		"eslint": "^8.53.0",
		"jest": "^29.7.0",
		"jest-junit": "^16.0.0",
		"prettier": "^3.1.0",
		"turbo": "latest"
	},
	"packageManager": "pnpm@10.0.0"
}
