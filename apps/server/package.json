{
	"name": "@challanger-bank/server",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
		"config:local": "cp .env.example .env",
		"dev": "tsx watch src/index.ts",
		"schema": "tsx scripts/updateSchema.ts && cp schema/schema.graphql ../web/data",
		"seeds:accounts": "tsx scripts/accountsSeed.ts",
		"reset:account": "tsx scripts/resetAccount.ts",
		"reset": "tsx scripts/reset.ts && pnpm seeds:accounts",
		"reset:ledger": "tsx scripts/resetLedger.ts",
		"reset:pix": "tsx scripts/resetPixTransaction.ts",
		"test": "jest",
    "docs:generate:collections": "mkdir -p docs && gql2postman -s ./schema/schema.graphql -o ./docs/graphql-api-collection.json -p -O depth=3,includeDeprecatedFields=true"
	},
	"dependencies": {
		"@entria/graphql-mongo-helpers": "^1.1.2",
		"bullmq": "^5.58.7",
		"dataloader": "^2.2.2",
		"dotenv-safe": "^8.2.0",
		"graphql": "^16.8.1",
		"graphql-redis-subscriptions": "^2.6.0",
		"graphql-relay": "^0.10.0",
		"graphql-relay-subscription": "^1.0.0",
		"graphql-subscriptions": "^2.0.0",
		"graphql-ws": "^5.14.2",
		"ioredis-mock": "^8.9.0",
		"kcors": "^2.2.2",
		"koa": "^2.14.2",
		"koa-bodyparser": "^4.4.0",
		"koa-graphql": "^0.12.0",
		"koa-logger": "^3.2.1",
		"koa-router": "^12.0.1",
		"mongodb-memory-server": "^10.2.0",
		"mongodb-memory-server-core": "^10.2.0",
		"mongoose": "^7.0.3",
		"redis": "^5.8.2",
		"uuid": "^13.0.0",
		"ws": "^8.14.2"
	},
	"devDependencies": {
		"@babel/core": "^7.28.3",
		"@babel/preset-env": "^7.23.8",
		"@babel/preset-typescript": "^7.23.3",
		"@types/jest": "^30.0.0",
		"@types/kcors": "^2.2.8",
		"@types/koa": "^2.13.12",
		"@types/koa-bodyparser": "^4.3.10",
		"@types/koa-logger": "^3.1.5",
		"@types/koa-router": "^7.4.8",
		"@types/node": "^17.0.12",
		"@types/uuid": "^11.0.0",
		"@types/ws": "^8.18.1",
		"babel-jest": "^30.1.2",
		"tsx": "^3.12.6"
	}
}
